<%# This will be the view that allows the user to enter one of his previously joined games or create a new one%>
<h1> This is the game lobby for <%= user.local.name %></h1>

<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Create New Game
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Create New Game</h4>
      </div>
      <div class="modal-body">
        <%# start form%>
        <form action="/games/new" method="post">
        <%# game name text form%>
        <div class="form-group row">
          <label for="example-text-input" class="col-xs-2 col-form-label">Game Name</label>
          <div class="col-xs-10">
            <input class="form-control" type="text" name="name" id="game-name">
          </div>
        </div>
      </div>
      <%# user 1 email form%>
      <div class="form-group row">
        <label for="example-text-input" class="col-xs-2 col-form-label">Player 2</label>
        <div class="col-xs-10">
          <input class="form-control" type="text" name="user2email" id="user2email">
        </div>
      </div>
      <%# user 2 email form%>
      <div class="form-group row">
        <label for="example-text-input" class="col-xs-2 col-form-label">Player 3</label>
        <div class="col-xs-10">
          <input class="form-control" type="text" name="user3email" id="user3email">
        </div>
      </div>
      <%# user 3 email form%>
      <div class="form-group row">
        <label for="example-text-input" class="col-xs-2 col-form-label">Player 4</label>
        <div class="col-xs-10">
          <input class="form-control" type="text" name="user4email" id="user4email">
        </div>
      </div>
      <%# user 4 email form%>
      <div class="form-group row">
        <label for="example-text-input" class="col-xs-2 col-form-label">Player 5</label>
        <div class="col-xs-10">
          <input class="form-control" type="text" name="user5email" id="user5email">
        </div>
      </div>
      <%# user 5 email form%>
      <div class="form-group row">
        <label for="example-text-input" class="col-xs-2 col-form-label">Player 6</label>
        <div class="col-xs-10">
          <input class="form-control" type="text" name="user6email" id="user6email">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Create Game</button>
        </form>
      </div>
    </div>
  </div>
</div>



</div>
<div class="row">
<div class="col-sm-6 col-sm-offset-3">
    <div class="well">
        <p>
            <strong>Name</strong>: <%= user.local.name %><br>
            <strong>id</strong>: <%= user._id %><br>
            <strong>email</strong>: <%= user.local.email %><br>
            <strong>password</strong>: <%= user.local.password %>
        </p>
    </div>
</div>
</div>




